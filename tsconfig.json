{
  "compilerOptions": {
    "module": "CommonJS", // Switch to CommonJS
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["server.ts", "config", "controllers", "database", "middleware", "models", "routers", "schemas", "utils"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "target": "es6",          
    "module": "commonjs",       
    "outDir": "./dist",  
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "server.ts",
    "config",
    "controllers",
    "database",
    "middleware",
    "models",
    "routers",
    "schemas",
    "utils"
  ],
  "exclude": ["node_modules"]
}
